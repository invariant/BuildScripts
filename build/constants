#!/bin/zsh
export edition_mas="MAS"
export edition_sa="Standalone"
export channel_dev="Development"
export channel_beta="Beta"
export channel_prod="Production"

# look up edition label from target suffix
function get_edition {
  case $1 {
    SA ) print $edition_sa;;
    MAS ) print $edition_mas;;
    * ) print "Unknown";;  
  }
}

function storage_path {
  echo "$PILOTMOON_APPBUILDS_LOCATION/$product/($build) $product $version"
}